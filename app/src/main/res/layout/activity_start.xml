<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/tbi_logo"
        android:layout_marginTop="90dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/technocrats"
        android:layout_centerHorizontal="true"
        >
    </ImageView>
    <TextView
        android:id="@+id/tbi_textview_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBI - GEU"
        android:layout_marginTop="8dp"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/tbi_logo"
        android:layout_centerHorizontal="true"
        >
    </TextView>

    <FrameLayout
        android:id="@+id/background_start"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:background="@drawable/start_bacjground"
        android:layout_alignParentBottom="true"

        >
    </FrameLayout>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignTop="@+id/background_start"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="30dp"

        android:text="Welcome to TBI-GEU" />

    <TextView
        android:id="@+id/text_minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="9dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/welcome_text"
        android:textAlignment="center"
        android:textSize="16dp"
        android:text="@string/str1"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal">
    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_minor"
        >
        <TextView
            android:id="@+id/sign_up_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign up"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:background="@drawable/signup_bg"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:id="@+id/sign_in_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="25dp"
            android:background="@drawable/signin_bg"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal">
        </TextView>
    </LinearLayout>


</RelativeLayout>